<% if !news.blank? %>
	<% news.each_slice(2) do |slice| %>
	  <div class="row">
	    <% slice.each do |newsitem| %>
			<div class="col-md-6">
				<div class="newz">
					<h2 class="h2-slim"><%= newsitem.title %></h2>
					<p>
						<a href="<%= newsitem.url %>">
							<span class="visible-xs"><%= newsitem.url_short 30 %></span>
							<span class="visible-sm"><%= newsitem.url_short 80 %></span>
							<span class="hidden-xs hidden-sm"><%= newsitem.url_short 50 %></span>
						</a>
					</p>
				</div>
			</div>
	    <% end %>
	  </div>
	<% end %>
<% else %>
 <div class="row">
  <h2>Keine Nachrichten!</h2>
 </div>
<% end %>
<div class="row">
  <h3 class="text-center">View older <a href="/archiv">Newz</a></h3>
</div>
